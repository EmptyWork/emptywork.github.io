<section aria-labelledby="featured" class="featured">
  <div class="main-container featured-container">
    <div class="featured-body">
      <time datetime="{{ featured.date | htmlDateString }}" class="featured-tag">
        {{ featured.date | featuredDate }}
      </time>
      <div class="featured-left">
        <header class="section-header featured-header">
          <h2 id="featured" class="header-title">
            <a class="header-link__access" href="#featured">
              <span aria-hidden="true">#</span>
              <span class="sr-only">Link to heading "featured"</span>
            </a>
            Featured Project
          </h2>
          <span class="featured-header_project-name">
            <h3>{{ featured.title }}</h3>
              {{ featured.subtitle | markdownToHTML | safe }}
          </span>
        </header>
        <main class="featured-main">
          <p>{{ featured.summary }}</p>
          <p class="featured-main_tag-area">
            {% for tag in featured.tags %}
            <span class="featured-main_tag">
              {{ tag }}
            </span>
            {% endfor  %}
          </p>
        </main>
        <footer class="featured-external">
          <a href="{{ featured.demoLink }}" aria-label="View featured project BikeForRupiah" rel="noopener noreferrer" class="featured-external_link">
            <svg fill="currentColor" aria-label="Icon for demo link" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z"></path>
